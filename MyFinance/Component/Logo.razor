<MudTooltip Text="@MetaDetailsOptions.Value.Description" Arrow="true" Placement="Placement.Bottom">
    <MudStack Row="true" Spacing="2">
        <MudAvatar>
            <MudImage Src="img/logo-pack-1.svg"></MudImage>
        </MudAvatar>
        <MudStack Spacing="0">
            <MudText Typo="Typo.h6" Class="px-4">@MetaDetailsOptions.Value.Name</MudText>
            <MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">@MetaDetailsOptions.Value.Version</MudText>
        </MudStack>
    </MudStack>
</MudTooltip>
